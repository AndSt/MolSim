<?xml version="1.0"?>
<pse
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="InputSetting.xsd">

	<start_time>0.0</start_time>
	<t_end>100</t_end>
	<delta_t>0.001</delta_t>
	<numberOfTypes>1</numberOfTypes>
	
	<gconst>0.0</gconst>
	
	<!-- true: smoothed LJ, false: LJ -->
	<force>true</force>
		
	<!-- Short range, linked cell algorithm -->
	<lc>
		<domainsize>
			<domainX>9.2</domainX>
			<domainY>9.2</domainY>
			<domainZ>9.2</domainZ>
		</domainsize>
		<rcutoff>2.3</rcutoff>
	
		<!-- 1=outflow, 2=reflecting for 6 boundaries -->
		<!-- left side -->
		<condition>2</condition>

		<!-- right -->
		<condition>2</condition>

		<!-- ground -->
		<condition>2</condition>

		<!-- upper -->
		<condition>1</condition>

		<!-- front -->
		<condition>2</condition>

		<!-- behind -->
		<condition>2</condition>
	</lc>	
	
	<!-- Thermostats -->
	<thermo>
		<enabled>true</enabled>
		<brownianFlag>false</brownianFlag>
		<initT>3.0</initT>
		<targetT>0.02</targetT>
		<deltaT>-0.0025</deltaT>
		<nThermo>25</nThermo>
		<nDelta>25</nDelta>
	</thermo>

	<!-- HERE NOT IMPORTANT -->
	<!-- !!!MUST IMPORT ParListStatus.txt!!! -->
	<inputfile>
		<name>input/CoolingArgonLiquidCuboid.xml</name>
		<!-- particles/cuboids/spheres -->
		<type>cuboids</type>
	</inputfile>
	
	<outputfile>
		<name>CoolingArgonInit</name>
		<freq>10</freq>
	</outputfile>
</pse>
