<?xml version="1.0"?>
<pse
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="InputSetting.xsd">

	<start_time>0.0</start_time>
	<t_end>100</t_end>
	<delta_t>0.0005</delta_t>
	<numberOfTypes>2</numberOfTypes>
	
	<gconst>-12.44</gconst>
	
	<!-- Short range, linked cell algorithm -->
	<lc>
		<domainsize>
			<domainX>60.0</domainX>
			<domainY>24.0</domainY>
			<domainZ>51.0</domainZ>
		</domainsize>
		<rcutoff>3.0</rcutoff>
	
		<!-- 1=outflow, 2=reflecting, 3=periodic for 6 boundaries -->
		<!-- left side -->
		<condition>3</condition>

		<!-- right -->
		<condition>3</condition>

		<!-- ground -->
		<condition>2</condition>

		<!-- upper -->
		<condition>2</condition>

		<!-- front -->
		<condition>3</condition>

		<!-- behind -->
		<condition>3</condition>
	</lc>	
	
	<!-- Thermostats -->
	<thermo>
		<enabled>true</enabled>
		<brownianFlag>false</brownianFlag>
		<initT>40.0</initT>
		<targetT>80</targetT>
		<deltaT>0</deltaT>
		<nThermo>1000</nThermo>
		<nDelta>200001</nDelta>
	</thermo>

	<inputfile>
		<name>input/RayleighTaylor3DCuboids.xml</name>
		<!-- particles/cuboids/spheres -->
		<type>cuboids</type>
	</inputfile>
		
	<outputfile>
		<name>RayTay3DVTK</name>
		<freq>10</freq>
	</outputfile>
</pse>
