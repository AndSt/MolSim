root := ../../..

include $(root)/build/cxx/rules.make
include $(root)/build/xsd/tree-rules.make


# Build.
#
driver: driver.o particles.o

particles.o: particles.cxx particles.hxx
driver.o: driver.cxx particles.hxx

particles.cxx particles.hxx: particles.xsd


# Test.
#
.PHONY: test
test: driver particles.xml
	./driver particles.xml


# Clean.
#
.PHONY: clean
clean:
	rm -f particles.o particles.?xx driver.o driver

