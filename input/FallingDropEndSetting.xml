<?xml version="1.0"?>
<pse
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="InputSetting.xsd">

	<start_time>0.0</start_time>
	<t_end>40</t_end>
	<delta_t>0.0005</delta_t>
	<numberOfTypes>2</numberOfTypes>
	
	<gconst>-12.44</gconst>
	
	<membrane>
		<r0>2.2</r0>
		<k>300.0</k>
		<f_z>0.8</f_z>
		<t_z>150.0</t_z>
	</membrane>
	
	<argon>
		<!-- true: smoothed LJ, false: LJ -->
		<force>false</force>
		
		<rl>1.9</rl>
	</argon>	
	
	<!-- Short range, linked cell algorithm -->
	<lc>
		<domainsize>
			<domainX>303.0</domainX>
			<domainY>180.0</domainY>
			<domainZ>0.0</domainZ>
		</domainsize>
		<rcutoff>3.0</rcutoff>
	
		<!-- 1=outflow, 2=reflecting for 6 boundaries -->
		<!-- left side -->
		<condition>2</condition>

		<!-- right -->
		<condition>2</condition>

		<!-- ground -->
		<condition>2</condition>

		<!-- upper -->
		<condition>1</condition>

		<!-- front -->
		<condition>2</condition>

		<!-- behind -->
		<condition>2</condition>
	</lc>	
	
	<!-- Thermostats -->
	<thermo>
		<enabled>false</enabled>
		<brownianFlag>false</brownianFlag>
		<initT>0.5</initT>
		<targetT>80</targetT>
		<deltaT>0</deltaT>
		<nThermo>1000</nThermo>
		<nDelta>40000</nDelta>
	</thermo>
	
	<inputfile>
		<name>input/FallingDropSphere.xml</name>
		<!-- particles/cuboids/spheres -->
		<type>spheres</type>
	</inputfile>
	
	<outputfile>
		<name>FallingDropEnd</name>
		<freq>10</freq>
	</outputfile>
</pse>
