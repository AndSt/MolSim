	<start_time>0.0</start_time>
	<t_end>5</t_end>
	<delta_t>0.00005</delta_t>
	
	<!-- Lennard-Jones Force --> 
	<ljf>
		<!-- potential well --> 
		<epsilon>5.0</epsilon>
		<!-- zero crossing --> 
		<sigma>1.0</sigma>
	</ljf>
	
	<!-- Short range, linked cell algorithm -->
	<lc>
		<domainsize>
			<domainX>120.0</domainX>
			<domainY>50.0</domainY>
			<domainZ>3.0</domainZ>
		</domainsize>
		<rcutoff>3.0</rcutoff>
	
		<!-- outflow, reflecting for 6 boundaries -->
		<!-- left side -->
		<condition>outflow</condition>

		<!-- right -->
		<condition>reflecting</condition>

		<!-- upper -->
		<condition>outflow</condition>

		<!-- ground -->
		<condition>outflow</condition>

		<!-- front -->
		<condition>outflow</condition>

		<!-- behind -->
		<condition>outflow</condition>
	</lc>	

	<inputfile>
		<name>InputSpheres.xml</name>
		<!-- particles/cuboids/spheres -->
		<type>spheres</type>
	</inputfile>
	
	<outputfile>
		<name>MolSimVTK</name>
